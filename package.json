{
  "name": "release",
  "version": "0.1.0-beta.0",
  "private": true,
  "main": "./dist/index.js",
  "repository": "https://github.com/teneplaysofficial/release.git",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "test": "node --test",
    "build": "node scripts/build.js",
    "pre-commit": "lint-staged",
    "fmt": "prettier --write",
    "fmt:check": "prettier --check .",
    "lint": "eslint",
    "lint:fix": "npx eslint --fix"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,yml,json,md}": [
      "yarn fmt"
    ],
    "*.{js,mjs,cjs}": [
      "yarn lint:fix",
      "yarn lint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "transform": {}
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "ansilory": "^2.0.1",
    "conventional-changelog": "^7.1.1",
    "conventional-recommended-bump": "^11.2.0",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.37.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.4.0",
    "@types/node": "^24.7.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2"
  }
}
